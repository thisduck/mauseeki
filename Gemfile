  gem 'tilt'
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'less'
end

gem 'jquery-rails'
gem 'backbone-rails'

# Use unicorn as the web server
# gem 'unicorn'

# Deploy with Capistrano
