<%= File.read "#{Rails.root}/vendor/assets/stylesheets/bootstrap.less" %>

html {
  overflow-y: scroll;
}

body {
  background-color: #FFFCEF;
}

h3 {
  font-family: Allerta, Arial;
}

label {
  font-family: Allerta, Arial;
  font-size: 14px;
}

input[type='text'] {
  .border-radius(3px);
  padding: 8px;
  border: 1px solid #222;
}


#header {
  font: 13px/1.5 'Helvetica Neue', Arial, 'Liberation Sans', FreeSans, sans-serif;
  background-color: #222;
  border-bottom: 2px solid gray;
  margin-bottom: 20px;
  a {
    text-decoration: none;
  }

  h1 {
    color: #EEDD88;
    margin: 0;
    margin-left: 10px;
  }

  #logo {
    .container;
    margin: 0 auto;
    h1 {
      margin: 0;
    }
  }
}

#container {
  .container;
  margin: 0 auto;
}
#main {
  .columns(12);
}

#sidebar {
  .columns(4);
}

.yt_holder {
  height: 0;
  overflow: hidden;
  position: fixed;
  top: 0;
  right: 0;
}

.finder {
  .columns(8);
  .border-radius(10px);
  margin-left: 0;
  background-color: #EEDD88;
  padding: 12px 20px;
  .search-field {
    //margin: 12px 20px;
    label[for=find] {
      display: block;
    }

    fieldset {
      .border-radius(3px);
      border: 1px solid black;
      width: 95%;
      background: white;
      padding: 0;

      button {
        border: none;
        background: white;
        width: 16px;
        height: 16px;

        &.loading {
          background: url('/images/loader.gif') white no-repeat right center;
        }

        &.clear {
          background: url('/images/raster/black/x_14x14.png') white no-repeat right center;
        }
      }

      #find {
        width: 90%;
        font-size: 16px;
        border: none;
        outline: none;

        &.loading {
        }
      }
    }
  }
}

ul {
  list-style: none;
  padding: 0;
}

.clip {
  .border-radius(3px);
  width: 425px;
  background: #F5F3EF;
  padding: 10px;
  margin: 10px 0px;
  border: 1px solid #222;

  h2 {
    margin-top: 0;
    font-size: 12px;
  }

  .status {
    background-color: #EFEFEF;
    padding: 2px;
    margin-bottom: 10px;

    .loaded, .playing {
      width: 0;
    }

    .loaded {
      background : gray;
      height: 2px;
    }

    .playing {
      background : lightgray;
      margin-top: 2px;
      height: 10px;
    }
  }

  .controls {
    display: inline;
    margin: 10px 0px;

    button {
      width: 24px;
      height: 24px;
      border: none;
      margin-right: 10px;
    }

    .play {
      background: url('/images/raster/black/play_18x24.png') transparent no-repeat right center;
    }

    .pause {
      background: url('/images/raster/black/pause_18x24.png') transparent no-repeat right center;
    }

    .add {
      background: url('/images/raster/black/plus_24x24.png') transparent no-repeat right center;
    }

    .video {
      background: url('/images/raster/black/movie_24x24.png') transparent no-repeat right center;
    }
  }

  .time {
    float: right;
  }

  .time_display {
    display: none;
    z-index: 100;
    background: black;
    color: white; 
    border: 1px solid gray;
    font-size: 10px;
    padding: 1px 2px;
  }
}

h2#go-ahead {
  font-family: 'Just Another Hand';
  font-size: 90px;
}
